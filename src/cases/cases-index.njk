        {%- for case in collections.caseStudies -%}
            <div class="section__col1-3">
                <a href="../cases/{{ case.title | slugify }}/">
                    <img src="{{ case.featuredImageUrl }}" alt="{{ case.featuredImage.alt }}" class="blog-listing__featured"></a>
                </div>
                <div class="section__col2-3">
                    <a href="../cases/{{ case.title | slugify }}/">
                        <h2 class="blog-listing__title">{{ case.title }}</h2>
                    </a>
                    <h3>The Problem:</h3>
                    {{ case.problem | richText | safe }}
                {%- endfor -%}
            </div>
        </section>
