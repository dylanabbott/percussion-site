<section class="members section-layout">
    <div class="members-container section__col3-3">
        {%- for member in collections.membersSorted -%}
            <div class="member-card">
                {%- if member.data.portrait -%}
                    <img src="{{ member.data.portrait }}" width="200" height="200" class="member-card__portrait" alt="Photo of {{ member.data.name }}">
                {%- else -%}
                    <img src="img/placeholder-portrait.png" width="200" height="200" class="member-card__portrait" alt="Placeholder Photo">
                {%- endif -%}
                <div class="member-card__info">
                    <h4>{{ member.data.name }}</h4>
                    <ul class="member-card__list">
                        {%- for role in member.data.roles -%}
                            <li class="member-card__role">{{ role }}</li>
                        {%- endfor -%}
                    </ul>
                    {%- if member.data.email or member.data.website -%}
                    <ul class="member-card__links">
                        {%- if member.data.email -%}
                            <li class="member-card__email"><img src="../img/letter.svg" alt="email" width="24" height="24" class="member-card__icon"><a href="mailto:{{ member.data.email }}">{{ member.data.email }}</a></li>
                        {%- endif -%}
                        {%- if member.data.website -%}
                            <li class="member-card__link"><li class="member-card__email"><img src="../img/browser.svg" alt="url" width="24" height="24" class="member-card__icon"><a href="http://{{ member.data.website }}">{{ member.data.website }}</a></li>
                        {%- endif -%}
                    </ul>
                    {%- endif -%}
                </div>
                <div class="member-card__bio">
                    <p>{{ member.data.bio }}</p>
                </div>
            </div>
        {%- endfor -%}
    </div>
</section>
