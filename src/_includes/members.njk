<section>
    <h2>Members</h2>
    <div class="members">
        {%- for member in collections.membersSorted -%}
            <div class="member-card">
                {%- if member.data.portrait -%}
                    <img src="{{ member.data.portrait }}" width="200" height="200" class="member-card__portrait">
                {%- else -%}
                    <img src="img/placeholder-portrait.png" width="200" height="200" class="member-card__portrait">
                {%- endif -%}
                <div class="member-card__info">
                    <h2>{{ member.data.name }}</h2>
                    <ul class="member-card__list">
                        {%- for role in member.data.roles -%}
                            <li class="member-card__role">{{ role }}</li>
                        {%- endfor -%}
                    </ul>
                    {%- if member.data.email or member.data.website -%}
                    <ul class="member-card__links">
                        {%- if member.data.email -%}
                            <li class="member-card__email">{{ member.data.email }}</li>
                        {%- endif -%}
                        {%- if member.data.website -%}
                            <li class="member-card__link">{{ member.data.website }}</li>
                        {%- endif -%}
                    </ul>
                    {%- endif -%}
                </div>
                <div class="member-card__bio">
                    <p>{{ member.data.bio }}</p>
                </div>
            </div>
        {%- endfor -%}
    </div>
</section>
