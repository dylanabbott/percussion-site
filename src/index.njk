<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% include 'fonts.njk' %} 
        <link rel="stylesheet" href="style/style.css">
        <title>Percussion Strategic</title>
    </head>
    <body>
        {% include 'navigation.njk' %}
        {% include 'header.njk' %}
        <main class="site-content">
            <h1>Percussion Strategic</h1>
            {% for section in collections.section %}
            <section class="{{ section.data.title | slug }} section-layout">
                <h2 class="section__heading">
                    <a id="{{ section.data.title | slug }}">{{ section.data.title }}</a>
                </h2>
                {%- if section.data.pullquote -%}
                <h3 class="section__pullquote">Pullquote</h3>
                {%- endif -%}
                {{ section.templateContent | safe }}
            </section>    
            {%- endfor -%}
            {# {% include 'members.njk' %} #}
            {% include 'cases.njk' %}
            {% include 'contact.njk' %}
        </main>
        {% include 'footer.njk' %}
        <script src="js/main.js"></script>
        <script src="js/showModal.js"></script>
        <script src="js/carousel.js"></script>
        <script src="js/mobile-menu.js"></script>
    </body>
</html>