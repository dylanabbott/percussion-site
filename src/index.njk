<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% include 'fonts.njk' %} 
        <link rel="stylesheet" href="style/style.css">
        <title>Percussion Strategic</title>
    </head>
    <body>
        {% include 'navigation.njk' %}
        {% include 'header.njk' %}
        <main class="site-content">
            {% for section in collections.sectionsSorted %}
            <section class="{{ section.data.title | slug }} section-layout">
                <div class="section__col1-3">
                    <h2 class="section__heading">
                        <a id="{{ section.data.title | slug }}">{{ section.data.title }}</a>
                    </h2>
                    {%- if section.data.pull_quote -%}
                        <h4 class="section__pullquote">{{ section.data.pull_quote }}</h4>
                    {%- endif -%}
                </div>
                <div class="section__col2-3">
                    {{ section.templateContent | safe }}
                </div>
            </section>    
            {%- endfor -%}
            {# {% include 'members.njk' %} #}
            {% include 'cases.njk' %}
            {% include 'contact.njk' %}
        </main>
        {% include 'footer.njk' %}
        <script src="js/main.js"></script>
        <script src="js/showModal.js"></script>
        <script src="js/carousel.js"></script>
        <script src="js/mobile-menu.js"></script>
    </body>
</html>